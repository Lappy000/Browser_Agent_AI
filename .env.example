# Browser Agent Configuration
# Copy this file to .env and fill in your API keys

# ===================
# LLM Provider Settings
# ===================

# AI Provider: anthropic, openrouter, or custom
AI_PROVIDER=openrouter

# API Keys (get from respective providers)
# OpenRouter: https://openrouter.ai/keys
# Anthropic: https://console.anthropic.com/
OPENROUTER_API_KEY=your_openrouter_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model settings
LLM_MODEL=anthropic/claude-sonnet-4
OPENROUTER_MODEL=anthropic/claude-sonnet-4
ANTHROPIC_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4096

# ===================
# Security Settings
# ===================

# Enable/disable Security Layer confirmations
# true - Ask for confirmation on risky actions (recommended for real use)
# false - Auto-approve all actions (useful for demos/testing)
SECURITY_ENABLED=true

# ===================
# Agent Settings
# ===================

# Maximum iterations per task (—É–º–µ–Ω—å—à–µ–Ω–æ –¥–ª—è –∫–æ–Ω—Ç—Ä–æ–ª—è —Å—Ç–æ–∏–º–æ—Å—Ç–∏)
MAX_ITERATIONS=30

# Task timeout in seconds (—É–º–µ–Ω—å—à–µ–Ω–æ —Å 600 –¥–æ 300)
TASK_TIMEOUT=300

# Show LLM reasoning/thinking in console
SHOW_THINKING=true

# Log display mode: "compact" or "verbose"
LOG_MODE=compact

# ===================
# üí∞ COST CONTROL SETTINGS (NEW!)
# ===================

# Maximum cost per single task in USD
# Agent stops if cost exceeds this limit
MAX_COST_PER_TASK=0.50

# Cost warning threshold in USD
# Shows warning when cost reaches this amount
WARN_COST_THRESHOLD=0.20

# ===================
# Browser Settings
# ===================

BROWSER_TYPE=chromium
HEADLESS=false
USER_DATA_DIR=./user_data
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=800
SLOW_MO=10

# Timeout for waiting elements (ms) - –æ–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–æ
DEFAULT_TIMEOUT=3000

# Navigation timeout (ms) - –æ–ø—Ç–∏–º–∏–∑–∏—Ä–æ–≤–∞–Ω–æ
NAVIGATION_TIMEOUT=5000

# ===================
# Vision Settings (Screenshots sent to AI)
# ‚ö†Ô∏è –í–ù–ò–ú–ê–ù–ò–ï: Vision —Å—É—â–µ—Å—Ç–≤–µ–Ω–Ω–æ —É–≤–µ–ª–∏—á–∏–≤–∞–µ—Ç —Å—Ç–æ–∏–º–æ—Å—Ç—å!
# ===================

# Enable vision mode - sends screenshots to LLM for visual understanding
# –†–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏—è: –≤–∫–ª—é—á–∏—Ç—å —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –Ω—É–∂–µ–Ω –≤–∏–∑—É–∞–ª—å–Ω—ã–π –∞–Ω–∞–ª–∏–∑
VISION_ENABLED=true

# Screenshot frequency: "always", "on_navigation", "on_error"
# ‚ö†Ô∏è "always" = –î–û–†–û–ì–û (~$0.01-0.02 –∑–∞ —Å–∫—Ä–∏–Ω—à–æ—Ç)
# ‚úÖ "on_navigation" = –†–ï–ö–û–ú–ï–ù–î–£–ï–¢–°–Ø (—ç–∫–æ–Ω–æ–º–∏—è 70-80%)
# üí∞ "on_error" = –º–∞–∫—Å–∏–º–∞–ª—å–Ω–∞—è —ç–∫–æ–Ω–æ–º–∏—è
VISION_FREQUENCY=on_navigation

# Capture full page (not just viewport)
VISION_FULL_PAGE=false

# Maximum screenshot dimensions (—É–º–µ–Ω—å—à–µ–Ω–æ –¥–ª—è —ç–∫–æ–Ω–æ–º–∏–∏ —Ç–æ–∫–µ–Ω–æ–≤)
VISION_MAX_WIDTH=1024
VISION_MAX_HEIGHT=768

# Use JPEG instead of PNG (smaller size = fewer tokens)
VISION_USE_JPEG=true

# JPEG quality (0-100, lower = smaller file = fewer tokens)
VISION_JPEG_QUALITY=70

# ===================
# Analyzer Settings
# ===================

# Max DOM size (characters) - —É–º–µ–Ω—å—à–µ–Ω–æ –¥–ª—è —ç–∫–æ–Ω–æ–º–∏–∏ —Ç–æ–∫–µ–Ω–æ–≤
MAX_DOM_SIZE=4000

# ===================
# Logging
# ===================

LOG_LEVEL=INFO